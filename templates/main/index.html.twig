{% extends 'layout.html.twig' %}

{% block content %}
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="{{ asset('img/slides/slide-1.jpg') }}" alt="Slide 1">
            </div>
            <div class="item">
                <img src="{{ asset('img/slides/slide-2.jpg') }}" alt="Slide 2">
            </div>
        </div>

        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Précédent</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </div>

    <hr/>

    <div class="row">
        <div class="col-lg-12">
            <h3>Les nouveautés</h3>
        </div>
    </div>

    <div class="row text-center">
        {% for last in last_products %}
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="{{ asset('img/products/shoe-' ~ last.id ~'.jpg') }}" alt="{{ last.name }}">
                    <div class="caption">
                        <h3>{{ last.name }}</h3>
                        <p>{{ last.description }}</p>
                        <p>
                            <span class="badge">{{ last.price|format_currency('EUR') }}</span>
                            <a href="{{ path('store_detail_product', {'id': last.id, 'slug': last.slug}) }}" class="btn btn-default">Voir la fiche</a>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <hr/>

    <div class="row">
        <div class="col-lg-12">
            <h3>Les plus populaires</h3>
        </div>
    </div>

    <div class="row text-center">
        {% for most_commented in most_commented_products %}
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="{{ asset('img/products/shoe-' ~ most_commented.id ~'.jpg') }}" alt="{{ most_commented.name }}">
                    <div class="caption">
                        <h3>{{ most_commented.name }}</h3>
                        <p>{{ most_commented.description }}</p>
                        <p>
                            <span class="badge">{{ most_commented.price|format_currency('EUR') }}</span>
                            <a href="{{ path('store_detail_product', {'id': most_commented.id, 'slug': most_commented.slug}) }}" class="btn btn-default">Voir la fiche</a>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}